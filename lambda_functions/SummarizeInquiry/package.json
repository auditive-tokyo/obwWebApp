  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.150",
    "@types/node": "^20.19.0",
    "eslint": "^9.8.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.3.2",
    "rimraf": "^5.0.10",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.0.0-alpha.40"
  },
  "dependencies": {
    "@aws-sdk/client-lambda": "^3.987.0",
    "esbuild": "^0.25.10"
  }
}